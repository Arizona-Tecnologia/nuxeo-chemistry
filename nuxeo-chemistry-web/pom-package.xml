<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.nuxeo.build</groupId>
  <artifactId>nuxeo-chemistry-packaging</artifactId>
  <name>Nuxeo Chemistry Packaging</name>
  <version>0.1-SNAPSHOT</version>
  <description>generate a Nuxeo Server packaging</description>
  <packaging>pom</packaging>

  <properties>
    <chemistry.version>0.1-SNAPSHOT</chemistry.version>
    <nuxeo.core.version>1.5-SNAPSHOT</nuxeo.core.version>
    <nuxeo.platform.version>5.2-SNAPSHOT</nuxeo.platform.version>
  </properties>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-bundles</id>
            <phase>package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
	        <artifactItem>
		      <groupId>org.apache.chemistry</groupId>
	          <artifactId>chemistry-api</artifactId>
              <version>${chemistry.version}</version>
		    </artifactItem>
	      <artifactItem>                                                                                                                                          
        	<groupId>org.apache.chemistry</groupId>                                                                                                             
	        <artifactId>chemistry-commons</artifactId>                                                                                                          
        	<version>${apache.chemistry.version}</version>                                                                                                      
	      </artifactItem>
	      <artifactItem>
		      <groupId>org.apache.chemistry</groupId>
	          <artifactId>chemistry-atompub</artifactId>
              <version>${chemistry.version}</version>
		    </artifactItem>
   	        <artifactItem>
		      <groupId>org.apache.chemistry</groupId>
	          <artifactId>chemistry-atompub-server</artifactId>
              <version>${chemistry.version}</version>
		    </artifactItem>
   	        <artifactItem>
		      <groupId>org.apache.chemistry</groupId>
	          <artifactId>chemistry-commons</artifactId>
              <version>${chemistry.version}</version>
		    </artifactItem>
   	        <artifactItem>
		      <groupId>org.nuxeo.ecm.core</groupId>
	          <artifactId>nuxeo-chemistry-impl</artifactId>
              <version>${nuxeo.core.version}</version>
		    </artifactItem>
   	        <artifactItem>
		      <groupId>org.nuxeo.ecm.webengine</groupId>
	          <artifactId>nuxeo-chemistry-web</artifactId>
              <version>${nuxeo.platform.version}</version>
		    </artifactItem>
		
              </artifactItems>
              <outputDirectory>target/nxserver/bundles</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>copy-libs</id>
            <phase>package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>

	        <artifactItem>
		      <groupId>commons-codec</groupId>
	          <artifactId>commons-codec</artifactId>
		      <version>1.3</version>
	        </artifactItem>

	        <artifactItem>
		      <groupId>org.apache.abdera</groupId>
	          <artifactId>abdera-core</artifactId>
		      <version>0.4.0-incubating</version>
	        </artifactItem>

	        <artifactItem>
		      <groupId>org.apache.abdera</groupId>
	          <artifactId>abdera-i18n</artifactId>
		      <version>0.4.0-incubating</version>
	        </artifactItem>
            
	        <artifactItem>
		      <groupId>org.apache.abdera</groupId>
	          <artifactId>abdera-parser</artifactId>
		      <version>0.4.0-incubating</version>
	        </artifactItem>

            <artifactItem>
		      <groupId>org.apache.abdera</groupId>
	          <artifactId>abdera-server</artifactId>
		      <version>0.4.0-incubating</version>
	        </artifactItem>
            
            <artifactItem>
		      <groupId>org.apache.ws.commons.axiom</groupId>
	          <artifactId>axiom-api</artifactId>
		      <version>1.2.5</version>
	        </artifactItem>

            <artifactItem>
		      <groupId>org.apache.ws.commons.axiom</groupId>
	          <artifactId>axiom-impl</artifactId>
		      <version>1.2.5</version>
	        </artifactItem>
            
            <artifactItem>
		      <groupId>jaxen</groupId>
	          <artifactId>jaxen</artifactId>
		      <version>1.1.1</version>
	        </artifactItem>
		
              </artifactItems>
              <outputDirectory>target/nxserver/lib</outputDirectory>
            </configuration>          
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
